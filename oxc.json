{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "quoteStyle": "single",
    "jsxQuoteStyle": "double",
    "semicolons": "always",
    "arrowParentheses": "always",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "quoteProps": "asNeeded",
    "trailingComma": "es5"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": "error",
      "suspicious": "error",
      "pedantic": "warn",
      "style": "warn",
      "complexity": "warn",
      "perf": "warn"
    }
  },
  "ignore": ["node_modules/**", ".next/**", "dist/**", "build/**"]
}
